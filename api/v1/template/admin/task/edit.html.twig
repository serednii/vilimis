{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Úkol - úprava</h1>

    <form action="{{ _router.generateUrl("admin_task_edit", {"id":task.id}) }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="form_edit_name">Název</label>
                <input value="{{ task.Name }}" type="text" name="name" class="form-control" id="form_edit_name">
            </div>
            <div class="form-group">
                <label for="form_edit_hour_budget">Hodinový rozpočet</label>
                <input value="{{ task.HourBudget }}" type="number" name="hour_budget" class="form-control" id="form_edit_hour_budget">
            </div>
            <div class="form-group">
                <label for="form_edit_project_id">Projekt</label>
                <select name="project_id" class="form-control" id="form_edit_project_id">
                    <option value="0">--- Vyberte ---</option>
                    {% for project_id in project_ids %}
                        <option value="{{ project_id.id }}"
                                {% if project_id.id == task.ProjectId %}
                                selected
                                {% endif %}
                        >
                        {% if project_id.title %}
                            {{ project_id.title }}
                        {% elseif project_id.name %}
                            {{ project_id.name }}
                        {% else %}
                            #{{ project_id.id }}
                        {% endif %}
                    </option>
                    {% endfor %}
                </select>
            </div>
        <button type="submit" class="btn btn-default">Uložit</button>
    </form>

{% endblock %}