{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Uživatelé</h1>

    <p>
        <button class="btn btn-success" onclick="document.getElementById('form-add').style.display='block';this.style.display='none'">Přidat</button>
    </p>

    <div id="form-add" style="display: none">
        <form action="{{ _router.generateUrl("admin_user") }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="form_edit_email">E-mail</label>
                <input value="{{ user.Email }}" type="text" name="email" class="form-control" id="form_edit_email">
            </div>
            <button type="submit" class="btn btn-default">Přidat</button>
        </form>
        <br/>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ _router.generateUrl("admin_user_edit", {"id":user.id}) }}">{{ user.Email }}</a>
                    </td>
                    <td width="130">
                        <a class="btn btn-xs btn-success" href="{{ _router.generateUrl("admin_user_edit", {"id":user.id}) }}">upravit</a>
                        <a class="btn btn-xs btn-danger" href="{{ _router.generateUrl("admin_user_delete", {"id":user.id}) }}"
                           onclick="return confirm('Opravdu?')">smazat</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}