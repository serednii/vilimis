{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Náklady - kategorie</h1>

    <p>
        <button class="btn btn-success" onclick="document.getElementById('form-add').style.display='block';this.style.display='none'">Přidat</button>
    </p>

    <div id="form-add" style="display: none">
        <form action="{{ _router.generateUrl("admin_costCategory") }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="form_edit_name">Název</label>
                <input value="{{ costCategory.Name }}" type="text" name="name" class="form-control" id="form_edit_name"
                required="required">
            </div>
            <div class="form-group">
                <label for="form_edit_color">Barva</label>
                <input value="{{ costCategory.Color }}" type="text" name="color" class="form-control" id="form_edit_color"
                >
            </div>
            <button type="submit" class="btn btn-default">Přidat</button>
        </form>
        <br/>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            {% for costCategory in costCategories %}
                <tr>
                    <td>
                        <a href="{{ _router.generateUrl("admin_costCategory_edit", {"id":costCategory.id}) }}">{{ costCategory.Name }}</a>
                    </td>
                    <td width="130">
                        <a class="btn btn-xs btn-success" href="{{ _router.generateUrl("admin_costCategory_edit", {"id":costCategory.id}) }}">upravit</a>
                        <a class="btn btn-xs btn-danger" href="{{ _router.generateUrl("admin_costCategory_delete", {"id":costCategory.id}) }}"
                           onclick="return confirm('Opravdu?')">smazat</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}